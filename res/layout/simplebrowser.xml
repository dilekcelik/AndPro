<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:orientation="horizontal" >
   <EditText android:layout_width="250dp" android:layout_height="wrap_content"
       android:layout_weight="2" android:id="@+id/etURL" 
        />

   <Button
       android:id="@+id/bGo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="2"
       android:text="Go" />
        
        </LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/bBack"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:text="Go Back" />

    <Button
        android:id="@+id/bFoward"
         android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:text="GoForward" />

    <Button
        android:id="@+id/bRefresh"
         android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:text="RefreshPage" />

    <Button
        android:id="@+id/bHistory"
         android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="ClearHistory" />
    </LinearLayout>

<WebView
    android:id="@+id/wvBrowser"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

</LinearLayout>
